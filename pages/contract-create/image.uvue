<script lang="uts">
	import { saveDraft, getDraftDetail } from '../../api/drafts/index.uts'
	
	export default {
		data() {
			return {
				isUploading: false,
				uploadProgress: 0,
				supportedFormats: ['.jpg', '.jpeg', '.png'],
				maxFileSize: 5 * 1024 * 1024, // 5MB
				fileInfo: {
					name: '',
					size: 0,
					type: '',
					path: ''  // 用于图片预览
				},
				draftId: '', // 草稿ID
				isFromDraft: false, // 是否来自草稿
				draftSaved: false // 是否已保存为草稿
			}
		},
		onLoad(options) {
			// 检查是否带有草稿ID参数
			if(options.draft_id) {
				this.draftId = options.draft_id;
				this.isFromDraft = true;
				this.loadDraftData();
			}
		},
		methods: {
			// 加载草稿数据
			async loadDraftData(): Promise<void> {
				try {
					uni.showLoading({
						title: '加载草稿中...'
					});
					
					// 调用API获取草稿详情
					const res = await getDraftDetail(this.draftId);
					
					if(res.code === 0) {
						const { content, title } = res.data;
						if(content && content.file_info) {
							this.fileInfo.name = content.file_info.file_name || title;
							this.fileInfo.size = content.file_info.file_size || 0;
							this.fileInfo.type = content.file_info.file_type || '';
							// 注意：这里无法直接获取本地路径，只能获取文件信息
							// 在实际应用中，可能需要从服务器下载文件或使用缓存
						}
						uni.hideLoading();
					} else {
						throw new Error(res.message || '加载草稿失败');
					}
				} catch(e) {
					uni.hideLoading();
					uni.showToast({
						title: '加载草稿失败',
						icon: 'none'
					});
					console.error('加载草稿失败:', e);
				}
			},
			
			// 保存草稿
			async saveDraft(): Promise<void> {
				if(!this.fileInfo.name) {
					uni.showToast({
						title: '请先选择图片',
						icon: 'none'
					});
					return;
				}
				
				try {
					uni.showLoading({
						title: '保存中...'
					});
					
					// 准备草稿数据
					const draftData = {
						draft_id: this.draftId || '', // 如果有草稿ID则更新，否则新建
						title: this.fileInfo.name, // 使用文件名作为草稿标题
						type: 'image', // 草稿类型: 图片发起
						step: 1, // 当前步骤: 图片上传
						progress: 30, // 进度: 30%
						content: {
							file_info: {
								file_name: this.fileInfo.name,
								file_size: this.fileInfo.size,
								file_type: this.fileInfo.type,
								file_id: 'mock-image-id', // 模拟文件ID
								file_url: this.fileInfo.path || 'mock-image-url' // 模拟文件URL
							}
						}
					};
					
					// 调用保存草稿API
					const res = await saveDraft(draftData);
					
					if(res.code === 0) {
						// 保存成功，更新草稿ID
						this.draftId = res.data.draft_id;
						this.isFromDraft = true;
						this.draftSaved = true;
						
						uni.hideLoading();
						uni.showToast({
							title: '草稿保存成功',
							icon: 'success'
						});
					} else {
						throw new Error(res.message || '保存草稿失败');
					}
				} catch(e) {
					uni.hideLoading();
					uni.showToast({
						title: '保存草稿失败',
						icon: 'none'
					});
					console.error('保存草稿失败:', e);
				}
			},
			
			chooseImage(): void {
				uni.chooseImage({
					count: 1,
					sizeType: ['original', 'compressed'],
					sourceType: ['album', 'camera'],
					success: (res) => {
						this.isUploading = false;
						this.uploadProgress = 0;
						
						if (res.tempFilePaths.length === 0) return;
						
						const filePath = res.tempFilePaths[0];
						const tempFile = res.tempFiles[0];
						
						// 检查文件大小
						if (tempFile.size > this.maxFileSize) {
							uni.showToast({
								title: '图片过大，请选择小于5MB的图片',
								icon: 'none'
							});
							return;
						}
						
						// 检查文件类型
						const fileName = tempFile.name ? tempFile.name.toLowerCase() : filePath.toLowerCase();
						let isValidType = false;
						
						for (let i = 0; i < this.supportedFormats.length; i++) {
							if (fileName.endsWith(this.supportedFormats[i])) {
								isValidType = true;
								break;
							}
						}
						
						if (!isValidType) {
							uni.showToast({
								title: '不支持的图片格式，请选择JPG或PNG图片',
								icon: 'none'
							});
							return;
						}
						
						// 保存文件信息
						this.fileInfo.name = tempFile.name || '图片' + Date.now();
						this.fileInfo.size = tempFile.size;
						this.fileInfo.type = fileName.split('.').pop() || '';
						this.fileInfo.path = filePath;
						
						// 自动开始上传
						// this.uploadImage(filePath);
					},
					fail: (err) => {
						console.error('选择图片失败:', err);
						uni.showToast({
							title: '选择图片失败',
							icon: 'none'
						});
					}
				});
			},
			
			uploadImage(filePath: string): void {
				this.isUploading = true;
				
				// 模拟上传进度
				let timer = setInterval(() => {
					this.uploadProgress += 10;
					if (this.uploadProgress >= 100) {
						clearInterval(timer);
						
						// 模拟上传完成后的处理
						setTimeout(() => {
							this.isUploading = false;
							this.proceedToNextStep();
						}, 500);
					}
				}, 300);
				
				// TODO: 实际的图片上传实现
			},
			
			cancelUpload(): void {
				this.isUploading = false;
				this.uploadProgress = 0;
				this.fileInfo.path = '';
				
				uni.showToast({
					title: '已取消上传',
					icon: 'none'
				});
			},
			
			proceedToNextStep(imageId: string = 'mock-image-id'): void {
				uni.showToast({
					title: '图片上传成功',
					icon: 'success',
					success: () => {
						setTimeout(() => {
							// 跳转到预览和签署区设置页面，如果是草稿则带上草稿ID
							const url = `/pages/contract-create/setup?fileId=${imageId}&fileName=${encodeURIComponent(this.fileInfo.name)}&fileType=${this.fileInfo.type}&isImage=true${this.draftId ? '&draft_id=' + this.draftId : ''}`;
							uni.navigateTo({
								url: url
							});
						}, 1500);
					}
				});
			},
			
			previewImage(): void {
				if (this.fileInfo.path) {
					uni.previewImage({
						urls: [this.fileInfo.path]
					});
				}
			},
			
			goBack(): void {
				uni.navigateBack();
			},
			
			// 格式化文件大小
			formatFileSize(size: number): string {
				if (size < 1024) {
					return size + 'B';
				} else if (size < 1024 * 1024) {
					return (size / 1024).toFixed(1) + 'KB';
				} else {
					return (size / (1024 * 1024)).toFixed(1) + 'MB';
				}
			}
		}
	}
</script>

